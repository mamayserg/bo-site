{
  "name": "back-office-v5",
  "private": true,
  "type": "module",
  "release": {
    "branches": [
      "main",
      {
        "name": "develop-branch",
        "prerelease": true
      }
    ]
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "nuxt start",
    "test": "vitest",
    "test:unit": "vitest --poolOptions.threads.singleThread",
    "test:unit:coverage": "vitest run --coverage",
    "playwright:install": "pnpm exec playwright install",
    "test:playwright": "npx playwright test",
    "test:playwright:ui": "npx playwright test --ui",
    "test:playwright:report": "npx playwright show-report",
    "docker:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:run": "docker compose -f docker-compose.dev.yml up",
    "docker:stop": "docker compose down",
    "docker:clean": "docker compose down --volumes --remove-orphans",
    "docker:add": "docker-compose exec nuxt-app pnpm add -w",
    "docker:remove": "docker-compose exec nuxt-app pnpm remove",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.787.0",
    "@aws-sdk/credential-providers": "^3.787.0",
    "@aws-sdk/util-dynamodb": "^3.803.0",
    "@fontsource/roboto": "5.1.0",
    "@pinia/nuxt": "0.9.0",
    "@playwright/test": "^1.50.1",
    "@primevue/forms": "^4.3.2",
    "@tailwindcss/vite": "^4.0.9",
    "esbuild": "0.24.0",
    "husky": "^9.1.7",
    "next-auth": "4.21.1",
    "nuxt": "^3.14.1592",
    "pinia": "2.3.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.2",
    "tailwindcss": "^4.0.9",
    "tailwindcss-primeui": "^0.5.1",
    "vee-validate": "^4.15.0",
    "vue": "latest",
    "vue-router": "latest",
    "zod": "^3.25.23"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": "22",
    "pnpm": "9.14.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@nuxt/eslint-config": "^0.7.4",
    "@nuxt/icon": "^1.11.0",
    "@nuxt/test-utils": "^3.15.4",
    "@nuxtjs/i18n": "9.3.1",
    "@primevue/nuxt-module": "^4.3.1",
    "@sidebase/nuxt-auth": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "3.0.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-perfectionist": "^4.4.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.1",
    "semantic-release": "^24.2.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.11",
    "vitest": "^3.0.4",
    "vue-eslint-parser": "^9.4.3"
  },
  "lint-staged": {
    "*.{vue,ts,js}": "pnpm lint"
  }
}
